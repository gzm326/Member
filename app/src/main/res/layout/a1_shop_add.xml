<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#fcfcfc" >

        <ImageView
            android:id="@+id/top_view_back"
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:background="@drawable/img_select"
            android:padding="14dp"
            android:src="@drawable/a2_back_button" />

        <LinearLayout
            android:id="@+id/top_view_title_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/top_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺维护"
                android:textColor="@color/select_item"
                android:textSize="20dp"
                />

        </LinearLayout>



        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_gravity="bottom"
            android:background="@color/select_item" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_preference_header"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="1dp"
                        android:text="门店名称"
                        android:textColor="#666666"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#cccccccc" />
                    <EditText
                        android:id="@+id/shop_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:paddingRight="30dp"
                        android:singleLine="true"
                        android:hint="请输入门店名称"
                        android:textColor="#333333"
                        android:textSize="16dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_preference_center"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="1dp"
                        android:text="联  系  人"
                        android:textColor="#666666"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#cccccccc" />

                    <EditText
                        android:id="@+id/lxr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:paddingRight="30dp"
                        android:singleLine="true"
                        android:hint="请输入老板姓名"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:maxLength="8"
                        android:textCursorDrawable="@null"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_preference_center"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="1dp"
                        android:text="联系电话"
                        android:textColor="#666666"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#cccccccc" />

                    <EditText
                        android:id="@+id/lxdh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:inputType="numberDecimal"
                        android:paddingRight="30dp"
                        android:singleLine="true"
                        android:hint="请输入老板手机号码"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:maxLength="11"
                        android:textCursorDrawable="@null"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_preference_footer"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="1dp"
                        android:text="门店地址"
                        android:textColor="#666666"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#cccccccc" />

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:inputType="numberDecimal"
                        android:paddingRight="30dp"
                        android:singleLine="true"
                        android:hint=""
                        android:textColor="#333333"
                        android:textSize="16dp"

                        android:textCursorDrawable="@null"/>


                </LinearLayout>


                <com.external.switchbutton.SwitchButton
                    style="@style/item"
                    android:id="@+id/grade_credit"
                    android:text="会员级别积分"
                    android:checked="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_preference_header"
                    app:withTextInterval="16dp"
                    app:frameDrawable="@mipmap/switch_frame"
                    app:stateDrawable="@drawable/selector_switch_state"
                    app:stateMaskDrawable="@mipmap/switch_state_mask"
                    app:sliderDrawable="@drawable/selector_switch_slider"/>
                <com.external.switchbutton.SwitchButton
                    style="@style/item"
                    android:id="@+id/grade_discount"
                    android:text="会员级别打折"

                    android:background="@drawable/selector_preference_center"
                    app:withTextInterval="16dp"
                    app:frameDrawable="@mipmap/switch_frame"
                    app:stateDrawable="@drawable/selector_switch_state"
                    app:stateMaskDrawable="@mipmap/switch_state_mask"
                    app:sliderDrawable="@drawable/selector_switch_slider"/>
                <com.external.switchbutton.SwitchButton
                    style="@style/item"
                    android:id="@+id/sale_credit"
                    android:text="消费项目积分"

                    android:background="@drawable/selector_preference_center"
                    app:withTextInterval="16dp"
                    app:frameDrawable="@mipmap/switch_frame"
                    app:stateDrawable="@drawable/selector_switch_state"
                    app:stateMaskDrawable="@mipmap/switch_state_mask"
                    app:sliderDrawable="@drawable/selector_switch_slider"/>
                <com.external.switchbutton.SwitchButton
                    style="@style/item"
                    android:id="@+id/sale_discount"
                    android:text="消费项目打折"
                    android:checked="true"
                    android:background="@drawable/selector_preference_footer"
                    app:withTextInterval="16dp"
                    app:frameDrawable="@mipmap/switch_frame"
                    app:stateDrawable="@drawable/selector_switch_state"
                    app:stateMaskDrawable="@mipmap/switch_state_mask"
                    app:sliderDrawable="@drawable/selector_switch_slider"/>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_preference_header"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="1dp"
                        android:text="生日积分系数"
                        android:textColor="#666666"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#cccccccc" />

                    <EditText
                        android:id="@+id/birth_credit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:inputType="numberDecimal"
                        android:paddingRight="30dp"
                        android:singleLine="true"
                        android:hint="0.00"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:maxLength="8"
                        android:textCursorDrawable="@null"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_preference_center"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="1dp"
                        android:text="生日打折系数"
                        android:textColor="#666666"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#cccccccc" />

                    <EditText
                        android:id="@+id/birth_discount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:inputType="numberDecimal"
                        android:paddingRight="30dp"
                        android:singleLine="true"
                        android:hint="0.00"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:maxLength="8"
                        android:textCursorDrawable="@null"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_preference_center"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="1dp"
                        android:text="店铺积分系数"
                        android:textColor="#666666"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#cccccccc" />

                    <EditText
                        android:id="@+id/shop_credit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:inputType="numberDecimal"
                        android:paddingRight="30dp"
                        android:singleLine="true"
                        android:hint="0.00"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:maxLength="8"
                        android:textCursorDrawable="@null"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_preference_footer"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="1dp"
                        android:text="店铺打折系数"
                        android:textColor="#666666"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#cccccccc" />

                    <EditText
                        android:id="@+id/shop_discount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:inputType="numberDecimal"
                        android:paddingRight="30dp"
                        android:singleLine="true"
                        android:hint="0.00"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:maxLength="8"
                        android:textCursorDrawable="@null"/>


                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:layout_margin="20dp"
                    />

            </LinearLayout>

        </ScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:alpha="0.15"
                android:background="#000000"/>

            <TextView
                android:id="@+id/c0_publish_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/c1_apply_btn_select"
                android:gravity="center"
                android:text="@string/publish_order"
                android:textColor="#FFFFFF"
                android:textSize="20dp"/>
        </FrameLayout>

    </FrameLayout>



</LinearLayout>