<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/c0_cell"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_select"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >



        <LinearLayout
            android:id="@+id/c0_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/c0_nickname_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/c0_mcard_kh"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:singleLine="true"
                    android:text="0123456"
                    android:textColor="@color/nickname_color"
                    android:textSize="16sp"
                    android:layout_weight="1.0" />

                <TextView
                    android:id="@+id/c0_mcard_xm"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:singleLine="true"
                    android:text="郭志明"
                    android:textColor="@color/nickname_color"
                    android:textSize="16sp"
                    android:layout_weight="1.0" />

                <TextView
                    android:id="@+id/c0_mcard_phone"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:singleLine="true"
                    android:text="13937126072"
                    android:textColor="@color/nickname_color"
                    android:textSize="16sp"
                    android:layout_weight="1.0" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/c0_arrow_right"
            android:layout_width="10dp"
            android:layout_height="13dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/c0_arrow_on"
            />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="@mipmap/tablecellline" />

</LinearLayout>