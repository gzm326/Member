<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ll_search_post"
        android:background="@color/bottom_text_color_normal"
        android:paddingLeft="7.0dip"
        android:paddingTop="4.0dip"
        android:paddingRight="7.0dip"
        android:paddingBottom="4.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
            <Button
                android:textSize="16.0dip"
                android:textColor="@color/bottom_text_color_normal"
                android:id="@+id/btn_search"
                android:background="@drawable/c1_apply_btn_select"
                android:layout_width="68.0dip"
                android:layout_height="38.0dip"
                android:text="搜索"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="search" />
            <EditText
                android:textSize="16.0dip"
                android:textColor="@color/color7"
                android:textColorHint="@color/color8"
                android:gravity="center_vertical"
                android:id="@+id/edt_keyword"
                android:background="@mipmap/bg_edittext2"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="38.0dip"
                android:layout_marginRight="7.0dip"
                android:hint="请输入搜索内容"
                android:singleLine="true"
                android:layout_toLeftOf="@id/btn_search"
                android:layout_centerVertical="true" />
    </RelativeLayout>

</LinearLayout>